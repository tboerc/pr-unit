{
  "compilerOptions": {
    "target": "es2017",
    "module": "es6",
    "jsx": "react",
    "strict": true,
    "declaration": true,
    "moduleResolution": "node",
    "baseUrl": "./",
    "skipLibCheck": true,
    "outDir": "./lib",
    "rootDir": "./src",
    "noImplicitAny": false,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true
  },
  "exclude": ["node_modules"]
}
